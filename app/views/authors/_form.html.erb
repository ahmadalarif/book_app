<%= form_for @author do |f| %>
  <div class="input-field col s6">
  	<%= f.label :first_name, 'Name'%>
  	<%= f.text_field :first_name%>
  </div>
  <div class="input-field col s6">
  	<%= f.label :genre, 'genre' %>
  	<%= f.text_field :genre %>
  </div>
  <div class="input-field col s6">
  	<%= f.label :bithdate, 'Birthdate' %>
  	<%= f.text_field :birthdate %>
  
  </div>
  <%= f.submit "Submit", :class => "btn waves-effect waves-light" %>
<% end %>